#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,i,j,k;
    cout<<"Enter the length of pyramid \n";
    cin>>n;
    for( i=0;i<=n-1;i++)
    {
        for(k=n-1;k>=i;k--)                 // pyramid   very imp.
        {
            cout<<" ";
        }
        for( j=0;j<2*i-1;j++)

        {
            cout<<"*";
        }

    cout<<"\n";
    }
    return 0;
}
